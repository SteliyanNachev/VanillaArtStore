@page
@model RegisterModel

<section class="bg-image" data-bg="/image/bg-images/bg-header.jpg">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <h2 class="page-name">Login Register</h2>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item">Login Register</li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<main class="page-section inner-page-sec-padding-top">
    <div class="container">
        <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
            <h1 class="entry-title">Register</h1>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="login-form">
                    <div class="row">
                        <div class="col-md-12 col-12 mb--20">
                            <label asp-for="Input.FirstName"></label>
                            <input asp-for="Input.FirstName" class="form-control mb-0" type="text" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 col-12 mb--20">
                            <label asp-for="Input.LastName"></label>
                            <input asp-for="Input.LastName" class="form-control mb-0" type="text" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 col-12 mb--20">
                            <label asp-for="Input.PhoneNumber"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control mb-0" type="number" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 col-12 mb--20">
                            <label asp-for="Input.Adress"></label>
                            <input asp-for="Input.Adress" class="form-control mb-0" type="text" />
                            <span asp-validation-for="Input.Adress" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 col-12 mb--20">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control mb-0" type="email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="col-12 mb--20">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control mb-0" type="password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="col-12 mb--20">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control mb-0" type="password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-black">Register</button>
                        </div>
                        <p class="mt--10 ml--20"><a asp-page="./LogIn" asp-route-returnUrl="@Model.ReturnUrl">Click for LogIn.</a></p>
                    </div>
                </div>
            </form>
        </div>
        </div>

</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
