@model MultipleClassForDetailsAndReview

    <form method="post" enctype="multipart/form-data" class="mt--15 site-form ">
        <span class="rating-widget-block d-inline-block">
            <input type="radio" asp-for="@Model.Review.Rating" value="1">
            <label asp-for="@Model.Review.Rating"></label>
            <input type="radio" name="star" id="star2">
            <label for="star2"></label>
            <input type="radio" name="star" id="star3">
            <label for="star3"></label>
            <input type="radio" name="star" id="star4">
            <label for="star4"></label>
            <input type="radio" name="star" id="star5">
            <label for="star5"></label>
        </span>
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label asp-for="@Model.Review.Comment">Comment</label>
                    <textarea asp-for="@Model.Review.Comment"id="message" cols="30" rows="10" class="form-control"></textarea>
                    <span asp-validation-for="@Model.Review.Comment" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="submit-btn">
                    <input class="btn btn-black" type="submit" value="Post Comment">
                </div>
            </div>
        </div>
    </form>